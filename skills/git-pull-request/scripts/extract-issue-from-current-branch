#!/usr/bin/env bash

set -euo pipefail

# Get current branch name
branch=$(git branch --show-current)

# Extract Linear issue ID (two or more letters, followed by dash and number)
issue_id=$(echo "$branch" | grep -oE "^[A-Za-z]+-[0-9]+" || true)

if [[ -n "$issue_id" ]]; then
  echo "$issue_id"
  exit 0
else
  exit 1
fi
